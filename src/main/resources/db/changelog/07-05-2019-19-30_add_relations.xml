    <changeSet id="1" author="Oleksandr">
        <addForeignKeyConstraint baseTableName="customer"
                                 baseColumnNames="user_id"
                                 constraintName="customer_user"
                                 referencedTableName="usr"
                                 referencedColumnNames="id"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>
    </changeSet>
