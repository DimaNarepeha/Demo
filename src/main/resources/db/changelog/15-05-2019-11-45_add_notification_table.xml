<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="Dima" id="1">
        <createTable tableName="notifications">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="notification_header" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="notification_message" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="seen" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Dima" id="2">
        <addForeignKeyConstraint baseTableName="notifications" baseColumnNames="user_id"
                                 constraintName="notifications_user"
                                 referencedTableName="usr"
                                 referencedColumnNames="id"
                                 onUpdate="CASCADE"/>
    </changeSet>
</databaseChangeLog>
